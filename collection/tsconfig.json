{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "preserve",
        "allowJs": true,
        "esModuleInterop": true,
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "types": [
            "jest",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "../collection/.next/types/**/*.ts",
        "../dist/collection/.next/types/**/*.ts",
        "next-env.d.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "jest.config.ts",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}