{
    "extends": "nx/presets/npm.json",
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "plugins": [
        "@monodon/rust",
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            },
            "exclude": [
                "packages/email/docsoc-mail-merge-node-e2e/**/*"
            ]
        }
    ],
    "targetDefaults": {
        "@nx/esbuild:esbuild": {
            "cache": true,
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "default",
                "^default"
            ]
        },
        "@nx/js:tsc": {
            "cache": true,
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "default",
                "^default"
            ]
        }
    },
    "pluginsConfig": {
        "@nx/js": {
            "analyzeSourceFiles": true
        }
    }
}