{
    "pluginsConfig": {
        "@nx/js": {
            "analyzeSourceFiles": true
        }
    },
    "extends": "nx/presets/npm.json",
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "plugins": [
        "@monodon/rust",
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            },
            "exclude": ["packages/email/docsoc-mail-merge-node-e2e/**/*"]
        },
        {
            "plugin": "@nx/next/plugin",
            "options": {
                "startTargetName": "start",
                "buildTargetName": "build",
                "devTargetName": "dev",
                "serveStaticTargetName": "serve-static"
            }
        },
        {
            "plugin": "@nx/playwright/plugin",
            "options": {
                "targetName": "e2e"
            }
        }
    ],
    "targetDefaults": {
        "@nx/esbuild:esbuild": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["default", "^default"]
        },
        "@nx/js:tsc": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["default", "^default"]
        }
    },
    "release": {
        "version": {
            "preVersionCommand": "npx nx run-many -t build"
        },
        "projects": [
            "common/util",
            "email/mailmerge",
            "email/mailmerge-cli",
            "clickup/calendar-sync"
        ]
    },
    "generators": {
        "@nx/next": {
            "application": {
                "style": "scss",
                "linter": "eslint"
            }
        }
    }
}
